---
import {
  ExternalLink,
  FileText,
  Globe,
  Instagram,
  Linkedin,
  MessageCircle,
} from "lucide-astro";
import Layout from "../layouts/Layout.astro";

const links = [
  {
    name: "BlakIA",
    url: "https://blakia.es",
    icon: Globe,
    classes:
      "bg-black/80 hover:bg-black border-neutral-800 text-white hover:shadow-neutral-900/50",
  },
  {
    name: "WhatsApp",
    url: "https://wa.me/34644050663",
    icon: MessageCircle,
    classes:
      "bg-[#25D366]/80 hover:bg-[#25D366] border-[#25D366]/50 text-white hover:shadow-[#25D366]/20",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/company/blakiatech/",
    icon: Linkedin,
    classes:
      "bg-[#0077b5]/80 hover:bg-[#0077b5] border-[#0077b5]/50 text-white hover:shadow-[#0077b5]/20",
  },

  {
    name: "Instagram",
    url: "https://instagram.com/blakiatech",
    icon: Instagram,
    classes:
      "bg-[#E1306C]/80 hover:bg-[#E1306C] border-[#E1306C]/50 text-white hover:shadow-[#E1306C]/20",
  },
];
---

<Layout>
  <!-- Fondo de la página moderno y minimalista "chulo" -->
  <div
    class="min-h-screen flex items-center justify-center p-6 bg-[#050505] relative overflow-hidden"
  >
    <!-- Elementos de fondo decorativos sutiles -->
    <div
      class="absolute inset-0 bg-[linear-gradient(to_right,#1a1a1a_1px,transparent_1px),linear-gradient(to_bottom,#1a1a1a_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] opacity-20 pointer-events-none"
    >
    </div>
    <div
      class="absolute top-0 left-0 right-0 h-[500px] bg-gradient-to-b from-blue-500/5 via-purple-500/5 to-transparent blur-3xl pointer-events-none"
    >
    </div>

    <!-- Tarjeta vertical con fondo de fibra de carbono realista y OSCURO -->
    <div
      class="card-alive carbon-fiber w-full max-w-[320px] rounded-[2rem] shadow-2xl border border-white/5 overflow-hidden z-10"
    >
      <!-- Overlay reducido ya que la fibra es más oscura por sí misma -->
      <div
        class="bg-gradient-to-b from-black/20 via-black/10 to-black/30 backdrop-blur-[1px]"
      >
        <div class="flex flex-col items-center p-8 text-white">
          <!-- Header con logo de icono moderno -->
          <header class="text-center mb-8">
            <!-- Logo icono con efecto de resplandor -->

            <!-- Logo icono con efecto de resplandor -->
            <!--
			<div
              class="inline-flex items-center justify-center w-24 h-24 mb-6 rounded-2xl bg-gradient-to-br from-blue-500/20 to-purple-500/20 border border-blue-400/30 backdrop-blur-xl shadow-lg shadow-blue-500/20"
            >
              <Sparkles class="w-12 h-12 text-blue-400" strokeWidth={1.5} />
            </div>
			-->

            <h1
              class="text-xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent mb-2 leading-tight"
            >
              José Álvaro Ruiz
            </h1>
            <!--
            <p class="text-sm text-gray-300 font-medium tracking-wide">
              CEO & AI Architect
            </p>
            -->

            <!-- etiqueta -->
            <!--
			<div
              class="mt-3 inline-block px-4 py-1.5 rounded-full bg-blue-500/10 border border-blue-400/20"
            >
              <span class="text-xs text-blue-300 font-semibold">BlakIA</span>
            </div>
			-->
          </header>

          <!-- Enlaces con iconos de Lucide -->
          <main class="w-full space-y-3 mb-8">
            {
              links.map((l) => (
                <a
                  href={l.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`group flex items-center justify-center px-4 py-3 rounded-xl border transition-all duration-300 transform hover:scale-[1.02] hover:shadow-lg relative overflow-hidden ${l.classes}`}
                >
                  <div class="flex items-center gap-2 relative z-10">
                    <l.icon class="w-4 h-4 transition-colors" strokeWidth={2} />
                    <span class="text-sm font-medium tracking-wide">
                      {l.name}
                    </span>
                  </div>
                  <div class="absolute right-3 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-2 group-hover:translate-x-0">
                    <ExternalLink
                      class="w-3 h-3 text-white/70"
                      strokeWidth={2}
                    />
                  </div>
                </a>
              ))
            }
          </main>

          <!-- Footer moderno -->
          <footer class="text-xs text-gray-400 text-center">
            <div class="flex items-center justify-center gap-1">
              <span>Made with</span>
              <span class="text-red-400 animate-pulse">♡</span>
              <span>by BlakIA</span>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Patrón de fibra de carbono ULTRA OSCURO para máximo contraste */
  .carbon-fiber {
    background: 
      /* Capa de brillo superior muy sutil */
      radial-gradient(
        circle at 50% 0%,
        rgba(255, 255, 255, 0.03) 0%,
        transparent 60%
      ),
      /* Patrón de tejido con tonos casi negros */
        linear-gradient(27deg, #050505 5px, transparent 5px) 0 5px,
      linear-gradient(207deg, #050505 5px, transparent 5px) 10px 0px,
      linear-gradient(27deg, #0a0a0a 5px, transparent 5px) 0px 10px,
      linear-gradient(207deg, #0a0a0a 5px, transparent 5px) 10px 5px,
      linear-gradient(90deg, #080808 10px, transparent 10px),
      linear-gradient(
        #0d0d0d 25%,
        #080808 25%,
        #080808 50%,
        transparent 50%,
        transparent 75%,
        #111111 75%,
        #111111
      );
    background-color: #020202;
    background-size:
      100% 100%,
      /* Brillo */ 20px 20px,
      /* Capa 1 */ 20px 20px,
      /* Capa 2 */ 20px 20px,
      /* Capa 3 */ 20px 20px,
      /* Capa 4 */ 20px 20px,
      /* Capa 5 */ 20px 20px; /* Capa 6 */
  }

  /* Animación de flotación suave - la tarjeta "respira" */

  @keyframes float {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-8px) scale(1.01);
    }
  }

  /* Animación de pulso del borde - efecto de energía */
  @keyframes borderPulse {
    0%,
    100% {
      border-color: rgba(255, 255, 255, 0.1);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }
    50% {
      border-color: rgba(96, 165, 250, 0.3);
      box-shadow:
        0 25px 50px -12px rgba(0, 0, 0, 0.25),
        0 0 30px rgba(96, 165, 250, 0.15);
    }
  }

  /* Animación de brillos sutiles */
  @keyframes shimmer {
    0% {
      background-position: -200% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  /* Clase para dar vida a la tarjeta */
  .card-alive {
    animation:
      float 6s ease-in-out infinite,
      borderPulse 4s ease-in-out infinite;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  /* Efecto hover - la tarjeta se eleva y brilla */
  .card-alive:hover {
    transform: translateY(-12px) scale(1.02) !important;
    box-shadow:
      0 30px 60px -15px rgba(0, 0, 0, 0.4),
      0 0 40px rgba(96, 165, 250, 0.2),
      inset 0 0 0 1px rgba(96, 165, 250, 0.1);
    border-color: rgba(96, 165, 250, 0.5) !important;
  }

  /* Brillo sutil que pasa sobre la tarjeta */
  .card-alive::before {
    content: "";
    position: absolute;
    top: 0;
    left: -200%;
    width: 200%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.03),
      transparent
    );
    animation: shimmer 8s ease-in-out infinite;
    pointer-events: none;
    z-index: 1;
  }

  /* Asegurar que el contenido esté sobre el brillo */
  .card-alive > * {
    position: relative;
    z-index: 2;
  }
</style>
